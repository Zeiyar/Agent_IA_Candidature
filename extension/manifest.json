{
  "manifest_version": 3,
  "name": "Assistant Candidature IA",
  "version": "1.0.0",
  "description": "Automatise tes candidatures avec l'IA",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "http://localhost:5000/*",
    "https://*/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Assistant Candidature"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icon.webp",
    "48": "icon.webp",
    "128": "icon.webp"
  }
}